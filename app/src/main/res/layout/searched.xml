<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/searchedNews"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        android:id="@+id/cardSearched"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:src="#308893"
                android:scaleType="centerCrop"
                android:id="@+id/searchedImage"></ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/searchedTitle"
                    android:text="Title"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:background="#000000"
                    android:textColor="#ffffff"
                    android:ems="3"
                    android:textStyle="bold"
                    android:layout_weight="2"
                    android:padding="8dp"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/searchedDescription"
                    android:text="Description"
                    android:textSize="12sp"
                    android:maxLines="4"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:textColor="#000000"
                    android:ems="3"
                    android:textStyle="bold"
                    android:padding="8dp"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="publisher"
                    android:background="#EDC95C"
                    android:textSize="9sp"
                    android:textColor="#000000"
                    android:padding="5dp"
                    android:textAlignment="viewEnd"
                    android:id="@+id/publisher1"
                    ></TextView>
            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>